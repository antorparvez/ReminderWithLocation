<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/common_layout"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".scenes.reminder.ReminderFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="#fff"
        android:layout_height="wrap_content">

      <TextView
          android:id="@+id/reminder_date"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Reminder Date"
          android:layout_marginTop="16dp"
          android:textSize="24sp"
          android:layout_margin="8dp"
          android:padding="4dp"
          android:gravity="center"/>


        <Button
            android:id="@+id/btn_set_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_below="@+id/reminder_date"
            android:background="@color/colorPrimary"
            android:text="Set Date"
            android:foreground="?attr/selectableItemBackground"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/reminder_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_set_date"
            android:text="Reminder Time"
            android:layout_marginTop="16dp"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:padding="4dp"
            android:gravity="center"/>


        <Button
            android:id="@+id/btn_set_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/colorPrimary"
            android:layout_below="@+id/reminder_time"
            android:text="Set Time"
            android:foreground="?attr/selectableItemBackground"
            android:textColor="@android:color/white" />


        <EditText
            android:id="@+id/et_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_set_time"
            android:layout_margin="8dp"
            android:hint="Reminder Note" />


        <Button
            android:id="@+id/btn_set_reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_note"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorPrimary"
            android:text="Set Reminder"
            android:textColor="@android:color/white" />



    </RelativeLayout>


    <TextView
        android:id="@+id/tv_no_data"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No Data Available"
        android:textSize="24sp"
        android:visibility="gone"
        android:gravity="center"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>