<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:padding="4dp"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            tools:text="Dhaka, Bangladesh" />


        <TextView
            android:id="@+id/tv_reminder_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_place_name"
            android:layout_alignParentStart="true"
            android:padding="4dp"
            tools:text="Gotta Buy Medicine" />


        <TextView
            android:id="@+id/tv_reminder_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="4dp"
            tools:text="10 : 12 AM" />


        <TextView
            android:id="@+id/tv_reminder_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_reminder_time"
            android:layout_alignParentEnd="true"
            android:padding="4dp"
            tools:text="12 September, 2019" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>